<% include ../partials/header.ejs %>

    <div class="container">
        <div class="row">
            <div class="col-md-offset-3 col-md-6">
                <h1><%= title %></h1>
                <a class="btn btn-primary" href="/todo/add" role="button">
                <i class="fas fa-plus-circle"></i> Add a Task</a>
                <br>
                <table class="table table-bordered table-striped table-hover">
                    <!-- Header Row-->
                    <tr>
                        <th class="text-center">Task</th>
                        <th class="text-center">Description</th>
                        <th class="text-center">Iscompleted</th>
                        <th class="text-center"></th>
                        <th class="text-center"></th>
                    </tr>

                    <!-- Repeatable Template Row -->
                    <% for(let count = 0; count < toDoList.length; count++) { %>
                        <tr>
                            <td class="text-center"><%= toDoList[count].task %></td>
                            <td class="text-center"><%= toDoList[count].desc %></td>
                            <td class="text-center"><%= toDoList[count].completed %></td>

                            <td class="text-center">
                            <a href="todo/edit/<%= toDoList[count]._id %>"
                                class="btn btn-primary"><i class="fas fa-pencil-alt"></i> Edit</a>
                            </td>

                            <td class="text-center">
                                    <a href="/todo/delete/<%= toDoList[count]._id %>"
                                        class="btn btn-danger"><i class="fas fa-trash-alt"></i> Delete</a>
                                    </td>
                        </tr>
                    <% } %>
                </table>

            </div>
        </div>
    </div>

<% include ../partials/footer.ejs %>